@model WebBanHang.Models.LoaiSanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Sửa</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
