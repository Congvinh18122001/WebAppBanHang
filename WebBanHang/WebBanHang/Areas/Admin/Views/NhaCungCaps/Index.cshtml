    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Quản lý nhà cung cấp</h2>
<hr />
<p>
    @Html.ActionLink("Thêm nhà cung cấp", "Create",new { }, new { @class = "btn btn-primary" })
</p>
