@model IEnumerable<WebBanHang.Models.NhaSanXuat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Quản lý nhà sản xuất</h2>
<hr />
<p>
    @Html.ActionLink("Thêm mới", "Create",new { },new { @class="btn btn-primary"})
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenNSX)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThongTin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNSX)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThongTin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Logo)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaNSX }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaNSX }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaNSX })
        </td>
    </tr>
}

</table>
